FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 8080

ENV ASPNETCORE_URLS=http://+:8080

USER app
FROM --platform=$BUILDPLATFORM mcr.microsoft.com/dotnet/sdk:9.0 AS build
ARG configuration=Release
WORKDIR /src
COPY ["src/GeoTrees.Api/GeoTrees.Api.csproj", "src/GeoTrees.Api/"]
RUN dotnet restore "src/GeoTrees.Api/GeoTrees.Api.csproj"
COPY . .
WORKDIR "/src/src/GeoTrees.Api"
RUN dotnet build "GeoTrees.Api.csproj" -c $configuration -o /app/build

FROM build AS publish
ARG configuration=Release
RUN dotnet publish "GeoTrees.Api.csproj" -c $configuration -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "GeoTrees.Api.dll"]
